<div class="container mx-auto flex flex-col border">


    <div class="flex bg-white px-6 py-4 border">

        <div class="flex gap-8">

            <div class="h-32 w-32 rounded-full overflow-hidden border">
                <img src="<%= user.profile_image || '/icon/profile-anonymous.svg' %>" alt=""
                    class="w-full h-full object-cover">
            </div>

            <div class="flex flex-col justify-center gap-2">
                <h1 class="text-4xl">
                    <%= user.username %>
                </h1>
                <h2 class="text-2xl">
                    <%= user.first_name + " " + user.last_name%>
                </h2>

                <button>
                    Click
                </button>

            </div>



        </div>
    </div>

</div>

<script src="/js/scripts.js"></script>